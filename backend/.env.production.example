# ============================================
# Production Environment Variables
# Updated: 2026-01-16
# IMPORTANT: Fill in all values before deployment
# ============================================

# ==========================================
# Application (REQUIRED)
# ==========================================
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Security Keys (GENERATE NEW KEYS!)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS

# ==========================================
# Database (REQUIRED)
# ==========================================
DATABASE_URL=postgresql://agenticrag_user:STRONG_PASSWORD_HERE@postgres:5432/agenticrag
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=agenticrag
POSTGRES_USER=agenticrag_user
POSTGRES_PASSWORD=STRONG_PASSWORD_HERE

# ==========================================
# Redis (REQUIRED)
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=STRONG_REDIS_PASSWORD_HERE
REDIS_MAX_CONNECTIONS=100

# ==========================================
# Milvus (REQUIRED)
# ==========================================
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_POOL_SIZE=20

# ==========================================
# OAuth 2.0 (Week 9-10)
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret
GITHUB_REDIRECT_URI=https://yourdomain.com/api/auth/oauth/github/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-production-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-production-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id-or-common
MICROSOFT_REDIRECT_URI=https://yourdomain.com/api/auth/oauth/microsoft/callback

# ==========================================
# SAML 2.0 (Week 9-10)
# ==========================================
SAML_ENABLED=false
# Configure SAML through admin UI after deployment

# ==========================================
# Payment (Week 3-4 - Marketplace)
# ==========================================
STRIPE_SECRET_KEY=sk_live_your-production-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-production-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret

# ==========================================
# Email (REQUIRED for notifications)
# ==========================================
SENDGRID_API_KEY=SG.your-production-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# ==========================================
# Monitoring & Error Tracking (REQUIRED)
# ==========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==========================================
# LLM Providers (REQUIRED)
# ==========================================
OPENAI_API_KEY=sk-your-production-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-production-anthropic-api-key
GROQ_API_KEY=gsk_your-production-groq-api-key
GOOGLE_API_KEY=your-production-google-api-key

# ==========================================
# CORS (REQUIRED)
# ==========================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000
RATE_LIMIT_PER_DAY=50000

# ==========================================
# File Upload
# ==========================================
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=pdf,docx,pptx,txt,md,csv,xlsx

# ==========================================
# AWS (Optional - for S3 storage)
# ==========================================
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-production-bucket-name

# ==========================================
# MinIO (Milvus Object Storage)
# ==========================================
MINIO_ROOT_USER=your-production-minio-user
MINIO_ROOT_PASSWORD=STRONG_MINIO_PASSWORD_HERE

# ==========================================
# Jaeger (Distributed Tracing)
# ==========================================
JAEGER_HOST=jaeger
JAEGER_PORT=6831
JAEGER_ENABLED=true

# ==========================================
# Feature Flags
# ==========================================
ENABLE_MARKETPLACE=true
ENABLE_CREDITS=true
ENABLE_WEBHOOKS=true
ENABLE_RATE_LIMIT_ADMIN=true
ENABLE_SSO=true
ENABLE_SAML=false

# ==========================================
# SSL/TLS (for Nginx)
# ==========================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.crt
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/cert.key

# ==========================================
# Backup Configuration
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ==========================================
# Performance Tuning
# ==========================================
WORKERS=8
MAX_CONNECTIONS=500
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30

# ==========================================
# Security Headers
# ==========================================
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

