{
  "name": "Schedule Trigger - Cron Test",
  "description": "Test scheduled workflow execution with cron expressions",
  "category": "triggers",
  "workflow": {
    "nodes": [
      {
        "id": "trigger_1",
        "type": "schedule_trigger",
        "position": { "x": 100, "y": 100 },
        "data": {
          "label": "Every 5 Minutes",
          "parameters": {
            "preset": "every_5_minutes",
            "cron": "*/5 * * * *",
            "timezone": "UTC"
          }
        }
      },
      {
        "id": "python_1",
        "type": "tool",
        "position": { "x": 300, "y": 100 },
        "data": {
          "label": "Log Execution",
          "tool_id": "python_code",
          "parameters": {
            "code": "from datetime import datetime\nreturn {\n    'executed_at': datetime.now().isoformat(),\n    'trigger': 'schedule',\n    'message': 'Scheduled task executed successfully'\n}"
          }
        }
      },
      {
        "id": "end_1",
        "type": "end",
        "position": { "x": 500, "y": 100 },
        "data": {
          "label": "End"
        }
      }
    ],
    "edges": [
      {
        "id": "e1",
        "source": "trigger_1",
        "target": "python_1"
      },
      {
        "id": "e2",
        "source": "python_1",
        "target": "end_1"
      }
    ]
  },
  "test_cases": [
    {
      "name": "Manual trigger test",
      "input": {},
      "expected_output": {
        "executed_at": "ISO_DATE_STRING",
        "trigger": "schedule",
        "message": "Scheduled task executed successfully"
      }
    }
  ],
  "assertions": [
    {
      "type": "trigger_registered"
    },
    {
      "type": "cron_expression_valid"
    },
    {
      "type": "no_errors"
    }
  ],
  "notes": [
    "This test validates trigger configuration, not actual scheduled execution",
    "For actual schedule testing, monitor workflow executions over time"
  ]
}
