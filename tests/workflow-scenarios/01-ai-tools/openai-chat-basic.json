{
  "name": "OpenAI Chat - Basic Test",
  "description": "Test basic OpenAI chat functionality with GPT-4",
  "category": "ai-tools",
  "workflow": {
    "nodes": [
      {
        "id": "start_1",
        "type": "start",
        "position": { "x": 100, "y": 100 },
        "data": {
          "label": "Start"
        }
      },
      {
        "id": "openai_1",
        "type": "tool",
        "position": { "x": 300, "y": 100 },
        "data": {
          "label": "OpenAI Chat",
          "tool_id": "openai_chat",
          "parameters": {
            "model": "gpt-4-turbo-preview",
            "system_message": "You are a helpful assistant that provides concise answers.",
            "prompt": "Explain what is {{input}} in one sentence.",
            "temperature": 0.7,
            "max_tokens": 100,
            "stream": false
          }
        }
      },
      {
        "id": "end_1",
        "type": "end",
        "position": { "x": 500, "y": 100 },
        "data": {
          "label": "End"
        }
      }
    ],
    "edges": [
      {
        "id": "e1",
        "source": "start_1",
        "target": "openai_1"
      },
      {
        "id": "e2",
        "source": "openai_1",
        "target": "end_1"
      }
    ]
  },
  "test_cases": [
    {
      "name": "Simple question",
      "input": "artificial intelligence",
      "expected_output": {
        "contains": ["AI", "machine", "learning", "intelligence"],
        "max_length": 200
      }
    },
    {
      "name": "Technical question",
      "input": "quantum computing",
      "expected_output": {
        "contains": ["quantum", "computing", "qubit"],
        "max_length": 200
      }
    }
  ],
  "assertions": [
    {
      "type": "response_time",
      "max_seconds": 10
    },
    {
      "type": "output_not_empty"
    },
    {
      "type": "no_errors"
    }
  ]
}
