# Production Environment Variables for Agentic RAG System
# Copy this file to .env.production and fill in your values

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=agentic_rag
POSTGRES_USER=raguser
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
DATABASE_URL=postgresql://raguser:CHANGE_THIS_PASSWORD_IN_PRODUCTION@postgres:5432/agentic_rag

# ============================================
# Milvus Configuration
# ============================================
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=documents

# MinIO (Milvus Storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

# ============================================
# LLM Provider Configuration
# ============================================
# Options: ollama, openai, claude
LLM_PROVIDER=ollama
LLM_MODEL=llama3.1

# Ollama (Local)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# OpenAI (Cloud)
OPENAI_API_KEY=

# Anthropic Claude (Cloud)
ANTHROPIC_API_KEY=

# ============================================
# Embedding Configuration
# ============================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================
# Security Configuration
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=production
LOG_LEVEL=INFO

# Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ============================================
# Optional: Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============================================
# Optional: Monitoring
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ============================================
# Optional: Storage
# ============================================
# S3-compatible storage for file uploads
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=agentic-rag-uploads
